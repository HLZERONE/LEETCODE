class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        unordered_map<char,int> ls;
        int max = 0;
        int begin = 0;
        for(int i=0; i<s.length(); i++){
            char c = s.at(i);
            if(ls.find(c) != ls.end() && ls[c] >= begin){
                if(i-begin > max){
                    max = i-begin;
                }
                begin = ls[c]+1;
            }
            ls[c] = i;
        }
        if(s.length()-begin > max){
            max = s.length()-begin;
        }
        return max;
    }
};

class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        int left = 0;
        int right = numbers.size()-1;
        vector<int> a(2);
        while(left < right){
            if(target == (numbers[left] + numbers[right])){
                a[0] = left+1;
                a[1] = right+1;
                return a;
            }
            else if(target < (numbers[left] + numbers[right])){
                right--;
            }
            else{
                left++;
            }
        }
        return a;
    }
};
